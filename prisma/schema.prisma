generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Talent {
  id           String   @id @default(cuid())
  name         String   @unique
  imageUrl     String
  category     String   @default("instagram")
  instagramUrl String?
  tiktokUrl    String?
  youtubeUrl   String?
  twitchUrl    String?
  kickUrl      String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  slug         String   @unique
  bio          String?

  @@index([category])
  @@index([order])
  @@index([slug])
}
