// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Talent {
  id           String   @id @default(cuid())
  name         String   @unique
  imageUrl     String
  category     String   @default("instagram") // "instagram" or "youtube"
  instagramUrl String?
  tiktokUrl    String?
  youtubeUrl   String?
  twitchUrl    String?
  kickUrl      String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
  @@index([order])
}
